<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.EspTouchActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/back_btn_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stateListAnimator="@drawable/lift_on_touch"
                android:contentDescription="@null"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:backgroundTint="#F0F0F0"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <Button
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:text="状态"
                android:backgroundTint="#F0F0F0"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/back_btn_image"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="七彩灯"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/back_btn_image"
                app:layout_constraintBottom_toBottomOf="@id/back_btn_image"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/colorPickerView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:palette="@drawable/palette"
            android:layout_gravity="center"
            app:selector="@drawable/wheel"
            app:preferenceName="MyColorPicker"
            app:actionMode="last"
            app:layout_constraintTop_toBottomOf="@id/constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.skydoves.colorpickerview.sliders.BrightnessSlideBar
            android:id="@+id/brightnessSlide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:borderColor_BrightnessSlider="@android:color/darker_gray"
            app:borderSize_BrightnessSlider="5"
            app:selector_BrightnessSlider="@drawable/wheel"
            app:layout_constraintTop_toBottomOf="@id/RGB_text"
            app:layout_constraintStart_toStartOf="@id/colorPickerView"
            app:layout_constraintEnd_toEndOf="@id/colorPickerView"/>
        <TextView
            android:id="@+id/RGB_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/colorPickerView"/>
        <Button
            android:id="@+id/rgb_red_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/calibri"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="红色"
            app:layout_constraintTop_toBottomOf="@id/brightnessSlide"
            app:layout_constraintStart_toStartOf="@id/colorPickerView"
            app:layout_constraintEnd_toEndOf="@id/colorPickerView"/>
        <Button
            android:id="@+id/rgb_green_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/calibri"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="绿色"
            app:layout_constraintTop_toBottomOf="@id/rgb_red_btn"
            app:layout_constraintStart_toStartOf="@id/colorPickerView"
            app:layout_constraintEnd_toEndOf="@id/colorPickerView"/>
        <Button
            android:id="@+id/rgb_blue_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/calibri"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="蓝色"
            app:layout_constraintTop_toBottomOf="@id/rgb_green_btn"
            app:layout_constraintStart_toStartOf="@id/colorPickerView"
            app:layout_constraintEnd_toEndOf="@id/colorPickerView"/>
        <Button
            android:id="@+id/rgb_close_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/calibri"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="关灯"
            app:layout_constraintTop_toBottomOf="@id/rgb_blue_btn"
            app:layout_constraintStart_toStartOf="@id/colorPickerView"
            app:layout_constraintEnd_toEndOf="@id/colorPickerView"/>
        <Button
            android:id="@+id/rgb_open_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/calibri"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="开灯"
            app:layout_constraintTop_toBottomOf="@id/rgb_close_btn"
            app:layout_constraintStart_toStartOf="@id/colorPickerView"
            app:layout_constraintEnd_toEndOf="@id/colorPickerView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>