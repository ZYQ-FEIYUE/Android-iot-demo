<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    app:layoutDescription="@xml/motion_scene_start"
    app:showPaths="false">

    <TextView
        android:id="@+id/start_image1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color1"
        android:text="F"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/start_image2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color2"
        android:text="E"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/start_image3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color3"
        android:text="I"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/start_image4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color4"
        android:text="Y"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/start_image5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color5"
        android:text="U"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/start_image6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color6"
        android:text="E"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>